<%- include('partial/header')%>
<div class="bg-cover bg-center h-screen" style="background-image: url('https://images.unsplash.com/photo-1627389955611-70c92a5d2e2b?q=80&w=1374&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D');">
    <%- include('partial/nav')%>
        <!--  -->
        <div class="rounded-xl w-[80%] pt-[2%]  m-auto flex flex-wrap">



            <!--  -->
            <% user.posts.forEach((post)=> { %>
                <div class="card w-[23%] mr-5 mb-5">
                    <div class="flex items-center mb-2">

                        <img class="w-[7vh] h-[7vh] rounded-full object-cover" src="/images/<%= user.profilepic %>"
                            alt="">
                        <div class="ml-3 ">
                            <h1 class=" text-white text-xl font-bold">
                                <%= user.name %>
                            </h1>
                            <small class="text-white">
                                <%= post.createdAt.toLocaleTimeString()%> |
                                    <%= post.createdAt.toLocaleDateString()%>
                            </small>
                        </div>
                    </div>
                    <img class="w-full h-[40vh]  object-cover" src="/images/<%= post.media%>" alt="">
                    <div class=" flex justify-between items-center mt-1">
                        <div class="flex items-center">
                            <span class="text-md mr-2">
                                <%= post.likes.length%>
                            </span>
                            <a class="text-2xl" href="/like/<%= post._id%>">
                                <% if(post.likes.includes(user._id)) { %>
                                    <i class="text-red-300 ri-heart-3-fill"></i>

                                    <% } else { %>
                                        <i class="ri-heart-3-line"></i>

                                        <% } %>
                            </a>
                        </div>
                        <div class="text-2xl">
                            <a href="/update-post/<%= post._id%>" class="text-blue-300 ri-edit-box-line"></a>
                            <a href="/delete-post/<%= post._id%>" class="text-red-300 ri-delete-bin-4-line"></a>
                        </div>
                    </div>
                </div>
                <% }) %>
                    <!--  -->





        </div>
        <!--  -->

        <%- include('partial/footer')%>