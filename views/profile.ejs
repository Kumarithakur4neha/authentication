<%- include('partial/header')%>
<div class="bg-cover bg-center h-screen" style="background-image: url('https://images.unsplash.com/photo-1639867031002-7dbd3de8a4cb?q=80&w=1421&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D');">
    <%- include('partial/nav')%>
        <!--  -->
        <div class="rounded-xl w-[80%] pt-[2%]  m-auto flex flex-wrap">



            <!--  -->
            <% posts.forEach((post)=> { %>
                <div class="card w-[23%] mr-5 mb-5">
                    <div class="flex items-center mb-2">

                        <img class="w-[7vh] h-[7vh] rounded-full object-cover" src="/images/<%= post.user.profilepic %>"
                            alt="">
                        <div class="ml-3 ">
                            <h1 class=" text-white text-xl font-bold">
                                <%= post.user.name %>
                            </h1>
                            <small class=" text-white ">
                                <%= post.createdAt.toLocaleTimeString()%> |
                                    <%= post.createdAt.toLocaleDateString()%>
                            </small>
                        </div>
                    </div>
                    <img class="w-full h-[40vh]  object-cover" src="/images/<%= post.media%>" alt="">
                    <div class=" flex items-center mt-1">
                        <span class="text-md mr-2">
                            <%= post.likes.length%>
                        </span>
                        <a class="text-2xl" href="/like/<%= post._id%>">
                            <% if(post.likes.includes(user._id)) { %>
                                <i class="text-red-300 ri-heart-3-fill"></i>

                                <% } else { %>
                                    <i class="ri-heart-3-line"></i>

                                    <% } %>
                        </a>
                        <!-- <i class="ri-chat-3-line"></i> -->
                    </div>
                </div>
                <% }) %>
                    <!--  -->





        </div>
        <!--  -->
        <div
            class=" flex justify-around items-center rounded-xl fixed left-[50%] bottom-[5%] translate-x-[-50%] w-[30%] py-3  bg-purple-400 text-2xl text-white">
            <i class="ri-search-line"></i>
            <a href="/post-create" class="ri-add-large-line"></a>
            <a href="/update-user/<%= user._id%>">
                <img class="rounded-full w-[2vmax] h-[2vmax] " src="/images/<%= user.profilepic%>" alt="">
            </a>
        </div>
</div>
        <%- include('partial/footer')%>