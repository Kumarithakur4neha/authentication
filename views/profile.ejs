<%- include('partial/header') %>
<div class="bg-cover bg-center h-screen" style="background-image: url('https://images.unsplash.com/photo-1639867031002-7dbd3de8a4cb?q=80&w=1421&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D'); overflow: hidden;">
    <%- include('partial/nav') %>
    <!-- Main container -->
    <div class="rounded-xl w-[90%] md:w-[80%] pt-[2%] mx-auto flex flex-wrap overflow-hidden">
        <!-- Posts -->
        <% posts.forEach((post) => { %>
            <div class="card w-full sm:w-[48%] md:w-[30%] lg:w-[23%] mb-5 sm:mb-6 md:mb-8 mr-0 sm:mr-3 lg:mr-5">
                <div class="flex items-center mb-2">
                    <img class="w-[5vh] h-[5vh] rounded-full object-cover" src="/images/<%= post.user.profilepic %>" alt="">
                    <div class="ml-3">
                        <h1 class="text-white text-lg md:text-xl font-bold">
                            <%= post.user.name %>
                        </h1>
                        <small class="text-white">
                            <%= post.createdAt.toLocaleTimeString()%> | <%= post.createdAt.toLocaleDateString()%>
                        </small>
                    </div>
                </div>
                <img class="w-full h-[20vh] md:h-[25vh] lg:h-[30vh] object-cover" src="/images/<%= post.media %>" alt="">
                <div class="flex items-center mt-1">
                    <span class="text-md mr-2">
                        <%= post.likes.length %>
                    </span>
                    <a class="text-2xl" href="/like/<%= post._id %>">
                        <% if(post.likes.includes(user._id)) { %>
                            <i class="text-red-300 ri-heart-3-fill"></i>
                        <% } else { %>
                            <i class="ri-heart-3-line"></i>
                        <% } %>
                    </a>
                </div>
            </div>
        <% }) %>
    </div>
    <!-- Bottom fixed menu -->
    <div class="flex justify-around items-center rounded-xl fixed left-[50%] bottom-[1%] translate-x-[-50%] w-[50%] sm:w-[60%] md:w-[40%] lg:w-[30%] py-1 bg-purple-400 text-2xl text-white">
        <i class="ri-search-line"></i>
        <a href="/post-create" class="ri-add-large-line"></a>
        <a href="/update-user/<%= user._id %>">
            <img class="rounded-full w-[8vmax] md:w-[4vmax] lg:w-[2vmax] h-[8vmax] md:h-[4vmax] lg:h-[2vmax]" src="/images/<%= user.profilepic %>" alt="">
        </a>
    </div>
</div>
<%- include('partial/footer') %>
